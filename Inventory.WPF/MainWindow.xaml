<Window x:Class="WpfInventory.MainWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:this="clr-namespace:WpfInventory" ResizeMode="NoResize"
        Title="InventoryApp" Height="350" Width="525">
    <Grid>
        <Grid.RowDefinitions>
            <RowDefinition Height="100"></RowDefinition>
            <RowDefinition Height="*"></RowDefinition>
        </Grid.RowDefinitions>
        <StackPanel Grid.Row="0" Margin="0,0,0.4,34.8">
            <Button Content="Dodaj" Margin="3" Command="{Binding Path=AddCommand}" CommandParameter="{Binding}"/>
            <Button Content="Zapisz" Margin="3" Command="{Binding Path=SaveCommand}" CommandParameter="{Binding DataGridViewModel.Products}"/>
            <TextBox x:Name="textBox" Height="60" FontSize="10" TextWrapping="Wrap" Text="{Binding Path=Path}" Margin="0,0,0.5,0"/>

        </StackPanel>
        <this:DataGridView DataContext="{Binding DataGridViewModel}" RenderTransformOrigin="0.525,0.765" Margin="0,0,0,-0.5" Grid.Row="1"/>
    </Grid>
</Window>
